@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layout.cshtml";
}

<ul>
    <li><a class="active" href="/Index/Index">Home</a></li>
    <li><a href="/Login/Login">Login</a></li>
    <li><a href="/Register/Register">Register</a></li>
    <li><a href="/About/About">About</a></li>
</ul>
<h1>Login Form </h1>
<div class="clear-loading spinner">
    <span></span>
</div>
<div class="w3ls-login box box--big">
    <form action="Create" method="post">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="agile-field-txt">
            <label><i class="fa fa-user" aria-hidden="true"></i> NU ID </label>
            <input type="text" name="rollno" placeholder="18K-XXXX" required="" />
        </div>
        <div class="agile-field-txt">
            <label><i class="fa fa-unlock-alt" aria-hidden="true"></i> Password </label>
            <input type="password" name="password" placeholder="Enter Password" required="" id="myInput" />
            <div class="agile_label">
                <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                <label class="check" for="check3">Show password</label>
            </div>
        </div>
        <script>
            function myFunction() {
                var x = document.getElementById("myInput");
                if (x.type === "password") {
                    x.type = "text";
                } else {
                    x.type = "password";
                }
            }
        </script>
        <input type="submit" value="LOGIN">
    </form>
</div>

